#:kivy 1.8.0

<FlappyMcnayGame>:
    mcnay: mcnay
    canvas:
        Color:
            rgb: 137 / 255.0, 228 / 255.0, 135 / 255.0
        Rectangle:
            size: root.size
            pos: root.pos
    Mcnay:
        id: mcnay
        center_x: root.center_x
        center_y: root.center_y
    Label:
        font_size: 70
        center_x: root.center_x
        top: root.top - 30
        text: str(root.score)

<Background>:


<Obstacle>:
    width: 30
    canvas:
        Color:
            rgb: 21 / 255.0, 180 / 255.0, 39 / 255.0
        Rectangle:
            pos: self.x, self.gap_top + 20
            size: self.width, self.height - self.gap_top
        Rectangle:
            pos: self.x, 0
            size: self.width, self.gap_top - self.gap_size
    Image:
        source: "pipe_bottom.jpg"
        center_x: root.center_x
        y: root.gap_top - 20
    Image:
        source: "pipe_top.jpg"
        center_x: root.center_x
        y: root.gap_top - root.gap_size - 40

<Mcnay>:
    bird_image: image
    size: 50, 50
    Image:
        id: image
        source: "flappy.jpg"
        size: root.size
        pos: root.pos